BEGIN
    CONTROL "<---", Bn_Back_ADFMX, "BUTTON", BS_PUSHBUTTON|BN_CLICKED, 20, 15, 40, 20 //
    CONTROL "Testo in chiaro", Id_Static_Lb1, "STATIC", SS_LEFT, 0+Fin_Weight/12, 0+Fin_Height/8, 80, 10 //
